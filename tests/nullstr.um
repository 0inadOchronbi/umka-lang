fn testStr() {
	var s1, s2, s3: str
	s4 := "Hello "

	printf(s1)
	scanf(s1)

	printf("s2 = %s\n", s2)
	printf(repr(s1) + repr(s2) + repr(s3) + repr(s4) + '\n')

	chars := []char(s2)
	printf(repr(chars) + '\n')

	printf("len = %d, %d\n", len(s2), len(s4))

	s5 := s1 + s2 + s4 + s3
	printf(s5 + '\n')

	printf(repr(s1 == s2) + repr(s1 < s2) + repr(s1 >= s2) + '\n')
	printf(repr(s1 == s4) + repr(s1 < s4) + repr(s1 >= s4) + '\n')
}

fn check(a: []str) {
	printf('\n' + repr(a) + '\n')
	for i, x in a {
		printf("    Item #" + repr(i) + " = " + repr(x) + '\n')
	}
	printf("len = " + repr(len(a)) + "  cap = " + repr(cap(a)) + '\n')
}

fn testArr() {
	var a, b, c: []str
	c = []str{"Hel" + "lo", "Wor" + "ld"}

	check(a)
	check(b)
	check(c)
	check(append(copy(a), b))
	check(append(copy(a), c))
	check(append(copy(c), a))
	check(insert(copy(a), 0, c[1]))
	check(slice(a, 0, 0))

	printf('\n' + repr([2]str(a)) + repr([2]str(c)) + '\n')

	var d: []char
	printf(repr(str(d)) + '\n')
}

fn test*() {
	testStr()
	testArr()
}

fn main() {
	test()
}
fn print(s: str) {
    printf("{s}\n", "> " + s)
}

fn printref(s: ^str) {
    printf("{s}\n", "> " + s^)
}

fn f(a: [3] int16) {
    a[1] = 47
    for i := 0; i < 3; i++ {
        printf("{d} ", a[i])
    }
    printf("\n")
}

fn fr(a: ^[3] int16) {
    a[1] = 48
    for i := 0; i < 3; i++ {
        printf("{d} ", a[i])
    }
    printf("\n")
}

fn g(r: struct {x, y: int}): int {
    return r.x + r.y
}

